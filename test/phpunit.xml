<phpunit colors="true">
	<testsuites>
		<testsuite name="Unit-Tests">
			<directory>./unit</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory>../</directory>
		</whitelist>
	</filter>

	<logging>
		<log
			type="coverage-html"
			target="./coverage"
			charset="UTF-8"
			yui="true"
			lowUpperBound="35"
			highLowerBound="70"
			showUncoveredFiles="true"
		/>
	</logging>
</phpunit>
